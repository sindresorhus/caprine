{
	"name": "caprine",
	"productName": "Caprine",
	"version": "2.57.0",
	"description": "Elegant Facebook Messenger desktop app",
	"license": "MIT",
	"repository": "sindresorhus/caprine",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "https://sindresorhus.com"
	},
	"main": "dist-js",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"postinstall": "patch-package && electron-builder install-app-deps",
		"lint": "tsc && xo && stylelint \"css/**/*.css\"",
		"test": "npm run lint",
		"start": "tsc && electron .",
		"build": "tsc",
		"release": "np"
	},
	"dependencies": {
		"@electron/remote": "^2.0.8",
		"@sindresorhus/do-not-disturb": "^1.1.0",
		"electron-better-ipc": "^2.0.1",
		"electron-context-menu": "^3.4.0",
		"electron-debug": "^3.2.0",
		"electron-dl": "^3.3.1",
		"electron-localshortcut": "^3.2.1",
		"electron-store": "^8.1.0",
		"electron-updater": "^5.2.1",
		"electron-util": "^0.17.2",
		"element-ready": "^5.0.0",
		"facebook-locales": "^1.0.916",
		"is-online": "^9.0.1",
		"json-schema-typed": "^8.0.1",
		"lodash": "^4.17.21",
		"npm-check-updates": "^16.0.5",
		"p-wait-for": "^3.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/electron-localshortcut": "^3.1.0",
		"@types/facebook-locales": "^1.0.0",
		"@types/lodash": "^4.14.182",
		"del-cli": "^5.0.0",
		"electron": "^21.2.0",
		"electron-builder": "^23.4.0",
		"husky": "^8.0.1",
		"np": "^7.6.2",
		"patch-package": "^6.4.7",
		"stylelint": "^14.10.0",
		"stylelint-config-xo": "^0.21.0",
		"typescript": "^4.7.4",
		"xo": "^0.51.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"import/no-anonymous-default-export": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/no-loop-func": "off",
			"@typescript-eslint/no-non-null-assertion": "off",
			"import/extensions": "off",
			"unicorn/prefer-module": "off",
			"@typescript-eslint/no-require-imports": "off",
			"@typescript-eslint/no-var-requires": "off",
			"n/file-extension-in-import": "off",
			"import/no-cycle": "off",
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/ban-ts-comment": "off",
			"@typescript-eslint/no-unsafe-call": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"declaration-no-important": null,
			"selector-class-pattern": null,
			"selector-id-pattern": null,
			"selector-max-class": null,
			"no-duplicate-selectors": null,
			"rule-empty-line-before": null,
			"no-descending-specificity": null,
			"length-zero-no-unit": null
		}
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"files": [
			"**/*",
			"!media${/*}"
		],
		"asarUnpack": [
			"static/Icon.png"
		],
		"appId": "com.sindresorhus.caprine",
		"mac": {
			"category": "public.app-category.social-networking",
			"icon": "build/icon.png",
			"electronUpdaterCompatibility": ">=2.15.0",
			"darkModeSupport": true,
			"extendInfo": {
				"LSUIElement": 1,
				"NSCameraUsageDescription": "Caprine needs access to your camera.",
				"NSMicrophoneUsageDescription": "Caprine needs access to your microphone."
			}
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"snap"
			],
			"icon": "build/icons/",
			"synopsis": "Elegant Facebook Messenger desktop app",
			"description": "Caprine is an unofficial and privacy focused Facebook Messenger app with many useful features.",
			"category": "Network;Chat"
		},
		"snap": {
			"plugs": [
				"default",
				"camera",
				"removable-media"
			],
			"publish": [
				{
					"provider": "github"
				},
				{
					"provider": "snapStore",
					"channels": [
						"stable"
					]
				}
			]
		},
		"win": {
			"verifyUpdateCodeSignature": false,
			"icon": "build/icon.png"
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	}
}
